{
  "name": "react-realtime-drawing",
  "version": "0.1.3",
  "homepage": "https://jsaari97.github.io/react-realtime-drawing",
  "description": "Realtime canvas drawing hooks for React",
  "author": "jsaari97",
  "license": "MIT",
  "repository": "jsaari97/react-realtime-drawing",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "keywords": [
    "react",
    "realtime",
    "canvas",
    "draw",
    "drawing",
    "hooks",
    "canvas"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepublish": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test",
    "test:watch": "react-scripts test",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.0.0",
    "@testing-library/react-hooks": "^5.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "gh-pages": "^3.0.0",
    "jest-canvas-mock": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "^4.0.0",
    "react-test-renderer": "^17.0.0"
  },
  "files": [
    "dist"
  ]
}
